generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(uuid())  @db.Uuid
  email    String   @unique
  password String
  name     String
  items    Item[]
}

model Item {
  id     String   @id @default(uuid()) @db.Uuid
  text   String
  user   User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String   @db.Uuid
}
